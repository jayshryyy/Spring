<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="employee" class="com.bajaj.bean.Employee">
        <property name="eId" value="101"></property>
        <property name="name" value="Ram"></property>
        <property name="salary" value="60"></property>
    </bean>
    <bean id="e" class="com.bajaj.bean.Employee">
        <constructor-arg value="103" type="int"></constructor-arg>
        <constructor-arg value="Jayshree"></constructor-arg>
        <constructor-arg value="600000" type="int"></constructor-arg>
    </bean>
    <bean id="address" class="com.bajaj.bean.Address">
        <property name="addressLine1" value="Hyatt"></property>
        <property name="addressLine2" value="Pune"></property>

    </bean>


</beans>
